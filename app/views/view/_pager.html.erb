<div class="pager">
  <div class="tabs">
    <%= link_to("Fix soros",  get_permalink(per_page: 50, page: nil),        class: [continuous_paging?? 'active' : 'passive', 'continuous']) %>
    <%= link_to("Éves",       get_permalink(per_page: 'year', page: nil),    class: [(params[:per_page] == 'year') ? 'active' : 'passive', 'year']) %>
    <%= link_to("Negyedéves", get_permalink(per_page: 'quarter', page: nil), class: [(params[:per_page] == 'quarter') ? 'active' : 'passive', 'quarter']) %>
    <%= link_to("Havi",       get_permalink(per_page: 'month', page: nil),   class: [(params[:per_page] == 'month') ? 'active' : 'passive', 'month']) %>
    <%= link_to("Heti",       get_permalink(per_page: 'week', page: nil),    class: [(params[:per_page] == 'week') ? 'active' : 'passive', 'week']) %>
  </div>

  <div class="pages">
    <% @pages.each do |key, prefs| %>
      <% start_date = Date.parse(prefs[:start_date].to_s) rescue prefs[:start_date] %>
      <% end_date = Date.parse(prefs[:end_date].to_s) rescue prefs[:end_date] %>
      <%= link_to("#{start_date} - #{end_date}", get_permalink(page: key, per_page: page_limit),
        class: (@current_page == prefs) ? 'active' : 'passive') %>
    <% end %>
  </div>
</div>
